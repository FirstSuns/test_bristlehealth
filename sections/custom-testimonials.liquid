<div class="custom_testimonials">
  <div class="page-width">
    <div class="custom_testimonials_main">
    <div class="left_content">
      <h1>{{ section.settings.title }}</h1>
      <p>{{ section.settings.subtitle }}</p>
    </div>
    <div class="rightcontent">
      <div class="testimonial-top-quote">{% render 'right-quote' %}</div>
      <div class="testimonial_slides">
        {% for block in section.blocks %}
          <div class="quote_data">
          <p class="testi_content">{{ block.settings.content }}</p>
        <div class="bottom_content">
          <img srcset="
                          {% if block.settings.img.width >= 100 %}{{ block.settings.img | image_url: width: 100 }} 495w,{% endif %}
                          {% if block.settings.img.width >= 518 %}{{ block.settings.img | image_url: width: 518 }} 518w,{% endif %}
                          {% if block.settings.img.width >= 644 %}{{ block.settings.img | image_url: width: 644 }} 644w,{% endif %}
                          {% if block.settings.img.width >= 768 %}{{ block.settings.img | image_url: width: 768 }} 768w,{% endif %}
                          {% if block.settings.img.width >= 830 %}{{ block.settings.img | image_url: width: 830 }} 830w,{% endif %}
                          {% if block.settings.img.width >= 960 %}{{ block.settings.img | image_url: width: 960 }} 960w{% endif %}"
                        src="{{ block.settings.img | image_url: width: 684, height: 684 }}"
                        sizes="(min-width: 1200px) calc((1200px - 19.5rem) / 12), (min-width: 750px) calc((100vw - 16.5rem) / 8), calc((100vw - 8rem) / 5)"
                        alt="{{ block.settings.img.alt | escape }}"
                        loading="lazy" />
          <div class="nameinfo">
          <span>{{ block.settings.name }}</span>
            <small>{{ block.settings.sub_title }}</small>
          </div>
          {% if block.settings.logo != blank %}
          <div class="right_logo">
            <a href="{{ block.settings.link }}"><img srcset="
                          {% if block.settings.logo.width >= 100 %}{{ block.settings.logo | image_url: width: 100 }} 495w,{% endif %}
                          {% if block.settings.logo.width >= 518 %}{{ block.settings.logo | image_url: width: 518 }} 518w,{% endif %}
                          {% if block.settings.logo.width >= 644 %}{{ block.settings.logo | image_url: width: 644 }} 644w,{% endif %}
                          {% if block.settings.logo.width >= 768 %}{{ block.settings.logo | image_url: width: 768 }} 768w,{% endif %}
                          {% if block.settings.logo.width >= 830 %}{{ block.settings.logo | image_url: width: 830 }} 830w,{% endif %}
                          {% if block.settings.logo.width >= 960 %}{{ block.settings.logo | image_url: width: 960 }} 960w{% endif %}"
                        src="{{ block.settings.logo | image_url: width: 684, height: 684 }}"
                        sizes="(min-width: 1200px) calc((1200px - 19.5rem) / 12), (min-width: 750px) calc((100vw - 16.5rem) / 8), calc((100vw - 8rem) / 5)"
                        alt="{{ block.settings.logo.alt | escape }}"
                        loading="lazy" /></a>
          </div>
          {% endif %}
        </div>
          </div>
        {% endfor %}
      </div>
    </div> </div>
  </div>
</div>
{% schema %}
  {
    "name": "Testimonials",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title"
      },
      {
        "type":"text",
        "id":"subtitle",
        "label":"Sub Title"
      }
    ],
    "blocks":[
      {
        "type":"text",
        "name":"Testimonial",
        "settings":[
          {
            "type":"html",
            "id":"content",
            "label":"Content"
          },
          {
            "type":"image_picker",
            "id":"img",
            "label":"Image"
          },
          {
              "type":"text",
              "id":"name",
              "label":"Name"
          },
           {
            "type":"text",
            "id":"sub_title",
            "label":"Sub Title"
          },
          {
            "type":"image_picker",
            "id":"logo",
            "label":"Logo"
          },
          {
            "type":"url",
            "id":"link",
            "label":"Link"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"Testimonials"
      }
    ]
  }
{% endschema %}

