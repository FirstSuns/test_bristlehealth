        "label": "Button Link 01"
      },
      {
        "type": "text",
        "id": "btn_title_02",
        "label": "Button Heading 02"
      },
      {
        "type": "url",
        "id": "btn_link_02",
        "label": "Button Link 02"
      }
    ],
    "blocks": [
      {
        "type": "FAQ",
        "name": "FAQ",
        "settings": [
          {
            "type": "text",
